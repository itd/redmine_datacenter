<div id="nagios" class="nagios box">
  <% unless @last_updated.nil? -%>
  <div class="contextual">
    <%= l(:label_updated_time, distance_of_time_in_words(Time.now,@last_updated)) %>
  </div>
  <% end -%>
  <h3><%= l_or_humanize(:nagios) %></h3>
  <% if @nagios_status -%>
    <% if @nagios_problems.empty? %>
      <%= l(:text_nagios_everything_ok) %>
    <% else %>
      <% 5.times do -%>
        <% ns = @nagios_problems.shift -%>
        <%= format_nagios_line(ns) if ns %>
      <% end -%>
      <% if @nagios_problems.any? -%>
        <div id="nagios_others" style="display:none;padding:0; margin:0;">
          <% @nagios_problems.each do |ns| -%>
            <%= format_nagios_line(ns) %>
          <% end -%>
        </div>
        <small>
          <%= link_to l(:label_more), {},
                      :onclick => 'Effect.toggle("nagios_others", "blind", {duration:0.3}); return false;' %>
        </small>
      <% end -%>
    <% end -%>
  <% else -%>
    <p class="nodata"><%= l(:label_no_data) %></p>
  <% end -%>
</div>
