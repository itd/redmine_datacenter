<div id="storage" class="storage box">
  <h3><%= l(:label_storage) %></h3>
  <% if @storage_devices.any? -%>
    <% @storage_devices.each do |device| -%>
      <% profile = device[:profile] %>
      <div class="device">
        <div class="contextual">
          <%= l(:label_updated_time, distance_of_time_in_words(Time.now,device[:last_updated])) %>
        </div>
        <h3><%= link_to_if device[:server].is_a?(Server), device[:name],
                          :overwrite_params => { :controller => "servers", 
                                                 :action => "show",
                                                 :id => device[:server] } %></h3>
        <p class="infos">
          Size:<%= pretty_size(profile.size) %>, 
          Free:<%= pretty_size(profile.free_space) %>, 
          Used:<%= pretty_size(profile.used_space) %>
          <br />
          <%= "#{profile.arrays.length} #{l_or_humanize(:arrays)}" %>, 
          <%= "#{profile.logical_drives.length} #{l_or_humanize(:logical_drives)}" %>
        </p>
        <% if profile.arrays.any? -%>
          <%= progress_bar(profile.percent_used,
                           :width => '20em',
                           :legend => ('%0.0f%' % profile.percent_used)) %>
          
          <% devid = "device-#{device[:name].parameterize}" %>
          <small>
            <%= link_to l(:label_more), {},
                          :onclick => %Q(Effect.toggle("#{devid}", "blind", {duration:0.3}); return false;) %>
          </small>
          <table id="<%= devid %>" class="storage-array" style="display:none">
          <% profile.arrays.each do |array| -%>
            <tr>
              <td class="center">
                Array <%= array[:name] %><br />
                <%= pretty_size(array.size) %>
              </td>
              <td class="center">
                RAID <%= array[:raid] %><br />
                <%= array[:drive_type] %>
              </td>
              <td style="width:100%"><%= progress_bar(array.percent_used, :width => '10em',
                                   :legend => "#{pretty_size(array.free_space)} free") %></td>
            </tr>
          <% end -%>
          </table>
        <% end -%>
      </div>
    <% end -%>
  <% else -%>
    <p class="nodata"><%= l(:label_no_data) %></p>
  <% end -%>
</div>
