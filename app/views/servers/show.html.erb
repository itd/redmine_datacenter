<div class="contextual">
  <%= link_to l(:button_update), edit_server_path(@server), :class => 'icon icon-edit' if User.current.admin? %> 
  <%= link_to l(:label_server_plural), servers_path, :class => 'icon icon-servers' %>
</div>

<h2><%= link_to l(:field_server), servers_path %> &#187; <%=h @server.name %></h2>

<div class="splitcontentleft server">
  <h3><%= @server.name %></h3>
  <table class="attributes">
    <tr><th><%=l(:field_name)%>:</th><td><%= @server.name %></td></tr>
    <tr><th><%=l(:field_fqdn)%>:</th><td><%= @server.fqdn %></td></tr>
    <tr><th><%=l(:field_ipaddress)%>:</th><td><%= @server.ipaddress %></td></tr>
    <tr><th><%=l(:field_description)%>:</th><td><%= @server.description %></td></tr>
  </table>
</div>

<div class="splitcontentright">
  <h3><%= l(:label_related_issues) %></h3>
  <% if @issues.empty? %>
  <p class="nodata"><%= l(:label_no_data) %></p>
  <% else %>
  <%= render :partial => 'issues/list_simple', :locals => {:issues => @issues} %>
  <p class="pagination"><%= pagination_links_full @issue_pages, @issue_count %></p>
  <% end %>
</div>

<% html_title(l(:label_server_plural)) -%>
